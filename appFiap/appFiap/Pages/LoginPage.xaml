<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="appFiap.LoginPage" Title="Login" BackgroundColor="Olive">
	
	<ContentPage.Content>
		
		<StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="15">
			
			<Entry x:Name="txtLogin" WidthRequest="300" HeightRequest="40" Placeholder="user" PlaceholderColor="Lime"
				TextColor="Red" BackgroundColor="White" />

			<Entry x:Name="txtSenha" WidthRequest="300" HeightRequest="40" Placeholder="password" PlaceholderColor="Lime"
				TextColor="Red" BackgroundColor="White" IsPassword="true" />

			<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" >
				
				<Button x:Name="btnLogin" WidthRequest="100" HeightRequest="50" Text="Login" BackgroundColor="Maroon" TextColor="White" 
					Clicked="Login_Clicked" />

				<Button x:Name="btnSignOn" WidthRequest="100" HeightRequest="50" Text="Register" BackgroundColor="Maroon" TextColor="White" 
					Clicked="FormSignOn_Clicked" />

				<Button x:Name="btnPasswordRecovery" WidthRequest="100" HeightRequest="50" Text="I Forgot" BackgroundColor="Maroon" TextColor="White" 
					Clicked="PasswordRecovery_Clicked" />

			</StackLayout>
			
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
